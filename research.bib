@article{Barnes1985,
title = "Two-photon decays support the (KK)-molecule picture of the S∗(975) and δ(980)",
journal = "Phys. Lett. B",
volume = "165",
number = "4",
pages = "434 - 440",
year = "1985",
issn = "0370-2693",
doi = "https://doi.org/10.1016/0370-2693(85)91261-4",
url = "http://www.sciencedirect.com/science/article/pii/0370269385912614",
author = "T. Barnes",
abstract = "We calculate the rate for S∗→γγ and for δ0→γγ under the assumption that these hadrons are (KK)-molecules. We find that Λ(δ0(KK)→γγ)≈0.6 keV, which is larger than the Crystal Ball measurement by a factor of ∼. This is a disagreement of ≈ 2α given current experimental or estimated theoretical errors. In contrast, the assignment δ=qq predicts a rate for and JADE collaborations for Λ(S∗→γγ) are consistent with our prediction for Λ(S∗(KK)→γγ), but are a factor of ∼5 smaller than the quark model prediction for Λ(S∗(qq)→γγ). We also discuss important uncertainties in our estimate of Λ((KK)→γγ) specifically (1) the value of ‖ψKK(0)‖, (2) use of the Born approximation to estimate the as yet unmeasured α(K+K-→γγ) near threshold and (3) the possibility of large isospin violation effects in the S∗–δ0 system. Possible ways of improving on our approximations are successed."
}
@article{Lemmer2007,
title = "Calculation of the two-photon decay width of the f0(980) scalar meson",
journal = "Phys. Lett. B",
volume = "650",
number = "2",
pages = "152 - 158",
year = "2007",
issn = "0370-2693",
doi = "https://doi.org/10.1016/j.physletb.2007.03.071",
url = "http://www.sciencedirect.com/science/article/pii/S0370269307005758",
author = "R.H. Lemmer",
abstract = "The applicability of the quasi-static approximation for calculating the two-photon annihilation rate of the scalar f0(980) meson envisaged as a KK¯ molecule is critically re-examined. It is shown that the validity of this approximation depends on the detailed interplay between the momentum dependence of the annihilation amplitude and the momentum space transform of the bound state wavefunction of the annihilating pair. The approximation becomes invalid when these two scales of variation are similar. An improved method of calculation based on the inclusion of electromagnetic corrections to the kernel of the Bethe–Salpeter equation for the interacting KK¯ pair is outlined to cover this case and applied to re-evaluate the two-photon decay width for f0(980) in a one-boson exchange model for the interkaon interaction. The corrections are significant and result in a much better agreement with experiment."
}

