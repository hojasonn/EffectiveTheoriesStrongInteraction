@article{Bijnens1993,
title = "Nambu-Jona-Lasinio-like models and the low-energy effective action of QCD",
journal = "Nuclear Physics B",
volume = "390",
number = "2",
pages = "501 - 541",
year = "1993",
issn = "0550-3213",
doi = "https://doi.org/10.1016/0550-3213(93)90466-3",
url = "http://www.sciencedirect.com/science/article/pii/0550321393904663",
author = "Johan Bijnens and Christophe Bruno and Eduardo de Rafael",
abstract = "We present a derivation of the low-energy effective action of an extended Nambu-Jona-Lasinio (ENJL) model to O(p4) in the chiral counting. Two alternative scenarios are considered on how the ENJL model could originate as a low-energy approximation to QCD. The low-energy effective lagrangian we derive includes the usual pseudoscalar Goldstone modes, as well as the lower scalar, vector and axial-vector degrees of freedom. By taking appropriate limits, we recover most of the effective low-energy models discussed in the literature; in particular the gauged Yang-Mills vector lagrangian, the Georgi-Manohar constituent quark-meson model, and the QCD effective action approach model. Another property of the ensuing effective lagrangian is that it incorporates most of the short-distance relations which follow from QCD. (We derive these relations in the presence of all possible gluonic interactions to leading order in the 1Nc expansion.) Finally the numerical predictions are compared with the experimental values of the low-energy parameters."
}
